<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unifor.euresolvo.SignInActivity">


    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:onClick="onClickGoCadastreEmail"
        android:text="Cadastre-se"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextEmailLogin"
        android:layout_alignStart="@+id/editTextEmailLogin"
        android:text="Insira seu e-mail e senha:"
        android:textAlignment="center"
        android:layout_below="@+id/imageView4" />

    <EditText
        android:id="@+id/editTextEmailLogin"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextSenhaLogin"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextEmailLogin"
        android:layout_below="@+id/editTextEmailLogin"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonLoginEmail"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSenhaLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:elevation="8dp"
        android:onClick="onClickLogin"
        android:text="Entrar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Bem vindo!"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLoginEmail"
        android:layout_centerHorizontal="true"
        android:text="- ou -" />

</RelativeLayout>
